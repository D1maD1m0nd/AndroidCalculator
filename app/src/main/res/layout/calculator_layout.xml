<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky5375005640"
    android:minHeight="0dp"
    android:orientation="vertical">
        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:background="@color/teal_700"
            android:backgroundTint="#E8FFFFFF"
            android:text="@string/result"
            android:textColor="#3D5AFE"
            android:textSize="30sp" />
    <TextView
        android:id="@+id/textViewInput"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="4dp"
        android:background="@color/teal_700"
        android:backgroundTint="#E8FFFFFF"
        android:text="@string/user_input_label"
        android:textColor="#3D5AFE"
        android:textSize="30sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:backgroundTint="#C6FF00"
            android:backgroundTintMode="src_over"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#B7FFFFFF"
                android:fontFamily="@font/alfa_slab_one"
                android:hapticFeedbackEnabled="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_label_1"
                android:textColor="#3D5AFE"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#B7FFFFFF"
                android:fontFamily="@font/alfa_slab_one"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_label_2"
                android:textColor="#3D5AFE"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#B7FFFFFF"
                android:fontFamily="@font/alfa_slab_one"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_label_3"
                android:textColor="#3D5AFE"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#E8FFFFFF"
                android:fontFamily="@font/alfa_slab_one"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_label_plus"
                android:textColor="#3D5AFE"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonFour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#B7FFFFFF"
                android:fontFamily="@font/alfa_slab_one"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_label_4"
                android:textColor="#3D5AFE"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonFive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#B7FFFFFF"
                android:fontFamily="@font/alfa_slab_one"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_label_5"
                android:textColor="#3D5AFE"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonSix"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#B7FFFFFF"
                android:fontFamily="@font/alfa_slab_one"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_label_6"
                android:textColor="#3D5AFE"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonMulti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#E8FFFFFF"
                android:fontFamily="@font/alfa_slab_one"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_label_x"
                android:textColor="#3D5AFE"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSeven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#B7FFFFFF"
                android:fontFamily="@font/alfa_slab_one"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_label_7"
                android:textColor="#3D5AFE"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonEight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#B7FFFFFF"
                android:fontFamily="@font/alfa_slab_one"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_label_8"
                android:textColor="#3D5AFE"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonNine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#B7FFFFFF"
                android:fontFamily="@font/alfa_slab_one"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_label_9"
                android:textColor="#3D5AFE"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#E8FFFFFF"
                android:fontFamily="@font/alfa_slab_one"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_label_div"
                android:textColor="#3D5AFE"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonZero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1.15"
                android:backgroundTint="#E8FFFFFF"
                android:fontFamily="@font/alfa_slab_one"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_label_0"
                android:textColor="#3D5AFE"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1.76"
                android:backgroundTint="#E8FFFFFF"
                android:fontFamily="@font/alfa_slab_one"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_label_minus"
                android:textColor="#3D5AFE"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1.76"
                android:backgroundTint="#E8FFFFFF"
                android:fontFamily="@font/alfa_slab_one"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_label_equals"
                android:textColor="#3D5AFE"
                android:textSize="20sp" />
        </LinearLayout>
</LinearLayout>